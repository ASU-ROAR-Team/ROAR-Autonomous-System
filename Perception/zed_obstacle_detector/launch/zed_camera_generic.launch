<?xml version="1.0"?>
<launch>
  <!-- Load the ROAR URDF to the parameter server -->
  <!-- <param name="robot_description" command="$(find xacro)/xacro '$(find roar_simulation)/urdf/roar.urdf'" /> -->

  <!-- Start robot_state_publisher to publish static transforms from URDF -->
  <!-- <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" /> -->

  <!-- Performance Mode -->
  <arg name="performance_mode" default="debug" doc="Performance mode (production, debug, high_performance)" />
  
  <!-- Transform Configuration -->
  <arg name="enable_transformations" default="" doc="Override enable_transformations (true/false). If empty, uses performance mode default" />
  
  <!-- Frame Configuration -->
  <arg name="base_link_frame" default="" doc="Base link frame. If empty, uses config file default" />
  <arg name="world_frame" default="" doc="World frame. If empty, uses config file default" />
  
  <!-- Topic and Frame Configuration -->
  <arg name="point_cloud_topic" default="" doc="Point cloud topic. If empty, uses config file default" />
  <arg name="camera_frame" default="" doc="Camera frame. If empty, uses config file default" />
  
  <!-- GUI Configuration (Optional) -->
  <arg name="enable_rqt_reconfigure" default="false" doc="Enable RQT reconfigure GUI for live parameter tuning" />
  <arg name="enable_rqt_plot" default="false" doc="Enable RQT plot for performance monitoring" />
  <arg name="enable_full_gui" default="false" doc="Enable full RQT GUI with multiple plugins" />
  <arg name="force_rviz" default="false" doc="Force RViz to launch even in non-debug modes" />
  
  <!-- Load parameters based on performance mode -->
  <group if="$(eval arg('performance_mode') == 'debug')">
    <rosparam command="load" file="$(find zed_obstacle_detector)/config/test_params.yaml" />
  </group>
  
  <group if="$(eval arg('performance_mode') == 'production')">
    <rosparam command="load" file="$(find zed_obstacle_detector)/config/params.yaml" />
  </group>

  <group if="$(eval arg('performance_mode') == 'high_performance')">
    <rosparam command="load" file="$(find zed_obstacle_detector)/config/high_performance_params.yaml" />
  </group>
  
  <node name="zed_obstacle_detector" pkg="zed_obstacle_detector" type="zed_obstacle_detector_node" output="screen">
    
    <!-- Only override YAML values if arguments are provided -->
    <param name="point_cloud_topic" value="$(arg point_cloud_topic)" if="$(eval arg('point_cloud_topic') != '')" />
    <param name="camera_frame" value="$(arg camera_frame)" if="$(eval arg('camera_frame') != '')" />
    <param name="base_link_frame" value="$(arg base_link_frame)" if="$(eval arg('base_link_frame') != '')" />
    <param name="world_frame" value="$(arg world_frame)" if="$(eval arg('world_frame') != '')" />
    <param name="enable_transformations" value="$(arg enable_transformations)" if="$(eval arg('enable_transformations') != '')" />
    
  </node>
  
  <!-- RViz for visualization (debug mode or forced) -->
  <node name="rviz" pkg="rviz" type="rviz" 
        args="-d $(find zed_obstacle_detector)/config/zed_obstacle_detector.rviz" 
        if="$(eval arg('performance_mode') == 'debug' or arg('force_rviz') == true)" />
  
  <!-- RQT Reconfigure for live parameter tuning -->
  <node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure" 
        args="--force-discover" output="screen" if="$(arg enable_rqt_reconfigure)">
    <param name="plugin" value="rqt_reconfigure/Reconfigure" />
  </node>
  
  <!-- RQT Plot for performance monitoring -->
  <node name="rqt_plot" pkg="rqt_plot" type="rqt_plot" 
        args="/zed_obstacle/performance/processing_time" 
        output="screen" if="$(arg enable_rqt_plot)">
  </node>
  
  <!-- Full RQT GUI with multiple plugins -->
  <node name="rqt_gui" pkg="rqt_gui" type="rqt_gui" 
        args="--perspective-file $(find zed_obstacle_detector)/config/zed_obstacle_detector.perspective" 
        output="screen" if="$(arg enable_full_gui)">
  </node>
  
</launch> 