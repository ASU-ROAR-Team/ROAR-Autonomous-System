<?xml version="1.0"?>
<launch>
  <!-- ZED2i Real-World Obstacle Detector Launch File -->
  <!-- Optimized for NVIDIA Jetson performance -->
  
  <node name="zed_obstacle_detector" pkg="zed_obstacle_detector" type="zed_obstacle_detector_node" output="screen">
    
    <!-- Input/Output Topics -->
    <param name="point_cloud_topic" value="/zed2i/zed_node/point_cloud/cloud_registered" />
    
    <!-- Frame Configuration -->
    <param name="base_link_frame" value="base_link" />
    <param name="world_frame" value="world" />
    <param name="camera_frame" value="zed2i_left_camera_frame" />
    
    <!-- Processing Parameters (Optimized for Jetson) -->
    <param name="passthrough_z_min_camera" value="0.2" />
    <param name="passthrough_z_max_camera" value="7.0" />
    <param name="voxel_leaf_size" value="0.08" />  <!-- Increased for performance -->
    <param name="enable_uniform_downsampling" value="false" />
    <param name="uniform_sampling_radius" value="0.08" />
    <param name="enable_early_exit" value="true" />  <!-- Enable for performance -->
    <param name="min_points_for_processing" value="200" />
    <param name="max_points_for_processing" value="15000" />
    
    <!-- Ground Detection (Optimized for real-world terrain) -->
    <param name="enable_ground_filtering" value="true" />
    <param name="ground_filter_distance_threshold" value="0.08" />
    <param name="ground_filter_angle_threshold_deg" value="15.0" />
    <param name="ground_filter_max_iterations" value="200" />
    <param name="mars_terrain_mode" value="false" />  <!-- Disable for real-world -->
    
    <!-- Clustering (Optimized for real-world obstacles) -->
    <param name="cluster_tolerance" value="0.3" />
    <param name="min_cluster_size" value="20" />
    <param name="max_cluster_size" value="15000" />
    
    <!-- Transform Parameters (Optimized for real-world TF) -->
    <param name="tf_lookup_timeout" value="0.05" />
    <param name="tf_buffer_duration" value="5.0" />
    
    <!-- Tracking Parameters (Optimized for real-world tracking) -->
    <param name="obstacle_association_distance" value="1.5" />
    <param name="obstacle_timeout_sec" value="30.0" />
    <param name="position_smoothing_factor" value="0.2" />
    <param name="min_detections_for_confirmation" value="3" />
    
    <!-- Performance Monitoring (Optimized for Jetson) -->
    <param name="enable_detailed_timing" value="false" />  <!-- Disable for performance -->
    <param name="enable_debug_publishers" value="false" />  <!-- Disable for performance -->
    <param name="timing_report_interval" value="30.0" />
    <param name="enable_performance_logging" value="true" />
    <param name="log_file_path" value="/tmp/zed_obstacle_detector.log" />
    
    <!-- Debug Output -->
    <param name="enable_debug_output" value="false" />
    
  </node>
  
  <!-- Optional: RViz for visualization (comment out for production) -->
  <!--
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find zed_obstacle_detector)/config/zed_obstacle_detector.rviz" />
  -->
  
</launch> 